<div class="container">
    <form>
        @* Brand *@
        <div class="component">
            <h3 class="filtersTitle">Brand</h3>
            @{
                string[] brands = { "Louis Vuitton", "Gucci", "Hermes", "Prada", "Chanel", "Versaceee" };
            }
            @for (var i = 0; i < 3; i++)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1">
                    <label class="form-check-label" for="inlineCheckbox1">@brands[i]</label>
                </div>
            }
            <button class="btn btn-link text-left" type="button" data-toggle="collapse" data-target="#multiCollapseExample2" aria-expanded="false" aria-controls="multiCollapseExample2">View more...</button>
            <div class="collapse multi-collapse" id="multiCollapseExample2">
                @for (var i = 3; i < 6; i++)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1">
                        <label class="form-check-label" for="inlineCheckbox1">@brands[i]</label>
                    </div>
                }
            </div>
        </div>

        @* Marimi *@

        <div class="component">
            <h3 class="filtersTitle">Sizes</h3>
            @{
                string[] marimi = { "XS", "S", "M", "L", "XL", "XXL" };
            }
            @for (var i = 0; i < 3; i++)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1">
                    <label class="form-check-label" for="inlineCheckbox1">@marimi[i]</label>
                </div>
            }
            <button class="btn btn-link text-left" type="button" data-toggle="collapse" data-target="#multiCollapseExample2" aria-expanded="false" aria-controls="multiCollapseExample2">View more...</button>
            <div class="collapse multi-collapse" id="multiCollapseExample2">
                @for (var i = 3; i < 6; i++)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1">
                        <label class="form-check-label" for="inlineCheckbox1">@marimi[i]</label>
                    </div>
                }
            </div>
        </div>

        @* Pret *@

    <div class="component">
        <h3 class="filtersTitle">Price range</h3>
        <div class="noUiSlider marginBottom40px" id="slider-handles"></div>
    </div>

    </form>
</div>