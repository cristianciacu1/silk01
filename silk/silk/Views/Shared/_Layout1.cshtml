<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Silkresell</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/cristi.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark box-shadow noMarginBottom">
            <div class="container">
                @* desktop *@
                <a class="navbar-brand d-none d-sm-block" asp-area="" asp-controller="Home" asp-action="Index"><span style="color: #FACB0C">$</span>ilkresell</a>
                @* mobil *@
                <a class="navbar-brand d-block d-sm-none" asp-area="" asp-controller="Home" asp-action="Index"><span style="color: #FACB0C">$</span>ilkresell</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <ul class="navbar-nav">
                    <ul class="navbar-nav flex-grow-1">

                        @* Sa se vada pe telefoane *@
                        @* Search - trebuie bara d aia de cautare*@
                        <li class="nav-item d-block d-sm-none d-inline-block">
                            <a class="nav-link text-light noHover paddingRight" asp-page="/Search" role="button">
                                <img src="~/Icons/search.png" alt="Cart" style="width: 22px; height: 22px" />
                            </a>
                        </li>
                        @* Sa nu se vada pe telefoane - sa se vada pe desktop*@
                        @* Search - trebuie bara d aia de cautare*@
                        <li class="nav-item d-none d-sm-block form-inline">
                            <form class="form-inline" name="formPC" id="form1">
                                <a onclick="openSearch()" class="nav-link text-light noHover" role="button">
                                    <img src="~/Icons/search.png" alt="Cart" style="width: 22px; height: 22px" />
                                </a>
                                <section class="d-none" id="sectiune1">
                                    <input name="search" class="form-control mr-sm-2 black" style="background-color: #343a40" type="search" placeholder="Search" aria-label="Search">
                                </section>
                            </form>
                        </li>


                        @* mobil *@
                        <li class="nav-item d-block d-sm-none d-inline-block paddingRight">
                            <a class="nav-link text-light noHover" asp-page="/Cart" role="button">
                                <img src="~/Icons/supermarket.png" alt="Cart" style="width: 22px; height: 22px" />
                            </a>
                        </li>
                        @* desktop *@
                        <li class="nav-item d-none d-sm-block dropdown">
                        <a class="nav-link dropdown-toggle text-dark noHover" href="#" id="navbarDropdown1" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <img src="~/Icons/supermarket.png" alt="Cart" style="width: 22px; height: 22px" />
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown1">
                            <div class="container">
                                <h5 class="dropdown-item-text">Cosul tau</h5>
                                <div class="dropdown-divider"></div>
                                <h5 class="dropdown-item-text">Este gol :(</h5>
                            </div>
                        </div>
                    </li>


                    </ul>

                    <partial name="_LoginPartial1" />

            </ul>
        </div>
    </nav>

        @* Navbar pentru mobil (in jos) *@

        <nav class="navbar navbar-expand-lg navbar-light bg-light d-block d-sm-none">
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Link</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Dropdown
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="#">Action</a>
                            <a class="dropdown-item" href="#">Another action</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">Something else here</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled" href="#">Disabled</a>
                    </li>
                </ul>
                <form class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                </form>
            </div>
        </nav> 
    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - SilkResell - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        function openSearch() {
            var element = document.getElementById("sectiune1");
            var form = document.getElementById("form1");
            element.style.transition = "all 2s";
            var clasa = element.className;
            if (clasa === "d-none") {
                element.classList.remove("d-none");
                element.classList.add("d-block");
                form.classList.add("borderBottom");
            }
            else {
                if (document.forms['formPC'].search.value === '') {
                    element.classList.remove("d-block");
                    element.classList.add("d-none");
                    form.classList.remove("borderBottom");
                }
            }
        }
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
