@* 2nd Navbar *@

<nav class="navbar navbar-expand-lg navbar-dark bg-dark d-none d-sm-block">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mx-auto">
            <li class="nav-item biggerPadding">
                <a class="nav-link">Hype</a>
            </li>
            <li class="nav-item biggerPadding">
                <a class="nav-link">Elegance</a>
            </li>
            <li class="nav-item biggerPadding">
                <a class="nav-link">Vintage</a>
            </li>
            <li class="nav-item biggerPadding">
                <a class="nav-link">Custom</a>
            </li>
            <li class="nav-item biggerPadding">
                <a class="nav-link">Casual</a>
            </li>
        </ul>
    </div>
</nav>


@* Left side column, only on desktops *@

<div class="wrapper d-none d-md-block">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2" style="background-color:black; height: 100vh;">

            </div>
        </div>
    </div>
</div>

@* Mobile first *@

<div class="wrapper d-block d-sm-none">
    <div class="container-fluid">
        <div class="row">
            @{ 
                for(var i=0; i<5; i++)
                {
                    <partial name="ItemCard" />
                }
            }
        </div>
    </div>
</div>
